{
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "NODE_VERSION": "15.9.0"
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/usr/bin/zsh"
  },
  "postCreateCommand": ".devcontainer/postCreateCommand.sh",
  "mounts": [
    "type=bind,src=${localEnv:HOME}/.ssh,dst=/home/sakamoto/.ssh,readonly"
  ],
  "remoteUser": "sakamoto"
}